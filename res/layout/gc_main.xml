<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:umadsdk="http://schemas.android.com/apk/res/com.LoveBus"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayout_titles"
        android:layout_width="fill_parent"
        android:layout_height="100.0dip"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/linearlayout_title1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"     
            android:textColor="#000000"
            android:textSize="22.0dip"
            android:background="@drawable/mock_gc_11"
            android:gravity="bottom|center" />

        <TextView
            android:id="@+id/linearlayout_title2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:textColor="#000000"
            android:textSize="22.0dip"
            android:background="@drawable/mock_gc_13"
            android:gravity="bottom|center"  />

        <TextView
            android:id="@+id/linearlayout_title3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:textColor="#000000"
            android:textSize="22.0dip" 
            android:background="@drawable/mock_gc_15" 
            android:gravity="bottom|center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_cursor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/mock_gc_17" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="#000000"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
      
</LinearLayout>